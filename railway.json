{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "./back/Dockerfile"
  },
  "deploy": {
    "rootDirectory": "back",
    "startCommand": "uv run python main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "signify-backend",
      "port": 8765,
      "protocol": "TCP"
    }
  ]
}